<resources
    xmlns:tools="http://schemas.android.com/tools" >

    <style name="AppActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
    </style>
    
    <style name="AppActionBar.Map">
        <item name="background">@color/mapActionBarColour</item>
    </style>

    <style name="Widget.MyBusEdinburgh.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="TextAppearance.AppCompat.ListItem1" >
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.ListItem2" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.AppCompat.ListItem2.Secondary" >
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Subheader">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:fontFamily">@string/fontFamilyMedium</item>
    </style>
    
    <style name="BusStopDetailsButtons" >
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="BusStopDetailsListItem" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">?attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?attr/listPreferredItemPaddingRight</item>
        <item name="android:paddingStart" tools:targetApi="17">?attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingEnd" tools:targetApi="17">?attr/listPreferredItemPaddingRight</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="BusTimesListItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="BusTimesListItemText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="BusTimesListItemText.Destination">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
    </style>
    
    <style name="BusTimesListItemText.Time">
        <item name="android:layout_width">@dimen/bustime_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="Card">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_double</item>
        <item name="android:layout_marginRight">@dimen/padding_double</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="Card.Default">
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>