<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">

    <ScrollView
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/addproxalertdialog_margin_start_end"
            android:layout_marginRight="@dimen/addproxalertdialog_margin_start_end"
            android:layout_marginStart="@dimen/addproxalertdialog_margin_start_end"
            android:layout_marginEnd="@dimen/addproxalertdialog_margin_start_end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBlurb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                tools:text="@string/addproxalertdialog_blurb" />

            <Spinner
                android:id="@+id/spinnerDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_double"
                android:entries="@array/addproxalertdialog_distance_array" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/btnLimitations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_double"
                android:text="@string/addproxalertdialog_button_limitations" />

            <LinearLayout
                android:id="@+id/layoutLocationDisabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_default"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addproxalertdialog_location_disabled_blurb"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:id="@+id/btnLocationSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_double"
                    android:text="@string/addproxalertdialog_location_disabled_button" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtErrorNoLocationFeature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/addproxalertdialog_margin_start_end"
        android:layout_marginRight="@dimen/addproxalertdialog_margin_start_end"
        android:layout_marginStart="@dimen/addproxalertdialog_margin_start_end"
        android:layout_marginEnd="@dimen/addproxalertdialog_margin_start_end"
        android:text="@string/addproxalertdialog_error_no_location_feature"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutLocationPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/addproxalertdialog_margin_start_end"
        android:layout_marginRight="@dimen/addproxalertdialog_margin_start_end"
        android:layout_marginStart="@dimen/addproxalertdialog_margin_start_end"
        android:layout_marginEnd="@dimen/addproxalertdialog_margin_start_end"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/addproxalertdialog_error_no_location_permission"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/btnGrantPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_double"
            android:layout_gravity="center_horizontal"
            android:text="@string/addproxalertdialog_button_grant_permission" />
    </LinearLayout>

    <include
        layout="@layout/indeterminate_progress"
        android:visibility="visible"
        tools:visibility="gone" />
</FrameLayout>